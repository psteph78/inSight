<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="240dp"
    android:layout_gravity="end"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="@font/playfair_display"
        android:padding="10dp"
        android:text="@string/your_profile"
        android:background="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#5AE3F5"/>

    <TextView
        android:id="@+id/exchangePointsBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="@font/playfair_display"
        android:padding="10dp"
        android:text="@string/exchange_points"
        android:background="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#5AE3F5" />

    <TextView
        android:id="@+id/userCommentsBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="@font/playfair_display"
        android:padding="10dp"
        android:text="@string/my_comments"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#5AE3F5"/>

    <TextView
        android:id="@+id/userPicturesBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="@font/playfair_display"
        android:padding="10dp"
        android:text="@string/my_pictures"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#5AE3F5"/>

    <TextView
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="@font/playfair_display"
        android:padding="10dp"
        android:text="@string/log_out"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#5AE3F5"/>
</LinearLayout>